{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/lib"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": ["lib/**/*.ts", "!lib/**/*.test.ts", "!lib/**/__tests__/**"],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  }
}
